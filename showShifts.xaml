<Window x:Class="WpfApp50.showShifts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp50"
        mc:Ignorable="d"
        Title="showShifts" Height="800" Width="800" WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid ShowGridLines="True" >
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Morning:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="1"/>
        <Label Content="Evening:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="2"/>
        <Label Content="Sunday:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="0" Grid.Column="1"/>
        <Label Content="Monday:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="0" Grid.Column="2"/>
        <Label Content="Tuesday:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="0" Grid.Column="3"/>
        <Label Content="Wednesday:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="0" Grid.Column="4"/>
        <Label Content="Thursday:" FontSize="25" FontWeight="ExtraBold" FontStyle="Italic" Grid.Row="0" Grid.Column="5"/>
        <ListBox x:Name="sun_mor_lsb" Grid.Row="1" Grid.Column="1" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="sun_eve_lsb" Grid.Row="2" Grid.Column="1" FontSize="20" FontWeight="ExtraBold" />
        <ListBox x:Name="mon_mor_lsb" Grid.Row="1" Grid.Column="2" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="mon_eve_lsb" Grid.Row="2" Grid.Column="2" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="tue_mor_lsb" Grid.Row="1" Grid.Column="3" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="tue_eve_lsb" Grid.Row="2" Grid.Column="3" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="wed_mor_lsb" Grid.Row="1" Grid.Column="4" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="wed_eve_lsb" Grid.Row="2" Grid.Column="4" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="thu_mor_lsb" Grid.Row="1" Grid.Column="5" FontSize="20" FontWeight="ExtraBold"/>
        <ListBox x:Name="thu_eve_lsb" Grid.Row="2" Grid.Column="5" FontSize="20" FontWeight="ExtraBold"/>
        <!--<DataGrid x:Name="shifts_dtgrid"/>-->
    </Grid>
</Window>
